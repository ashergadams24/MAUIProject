<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MAUIProject1.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MAUIProject1"
    xmlns:local2="clr-namespace:MAUIProject1.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="MAUIProject1">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Instructor"
        ContentTemplate="{DataTemplate local2:InstructorView}"
        Route="Instructor" />
    <ShellContent
        Title="Student"
        ContentTemplate="{DataTemplate local2:StudentView}"
        Route="Student" />
    <ShellContent
        Title="Student Options"
        ContentTemplate="{DataTemplate local2:StudentOptionsView}"
        Route="StudentOptions" />
    <ShellContent
        Title="Course Options"
        ContentTemplate="{DataTemplate local2:CourseOptionsView}"
        Route="CourseOptions" />
    <ShellContent
        Title="Course"
        ContentTemplate="{DataTemplate local2:CourseView}"
        Route="CourseView"/>


</Shell>
